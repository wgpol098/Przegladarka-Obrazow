<Window x:Class="Przegladarka_obazow.ValueWindow.PixelsRangeValue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Przegladarka_obazow.ValueWindow"
        mc:Ignorable="d"
        Title="PixelsRangeValue" Height="450" Width="800">
    <Grid>
        <Slider x:Name="SliderMin" HorizontalAlignment="Left" Margin="24,32,0,0" VerticalAlignment="Top" Width="502" Maximum="1000" Minimum="0"/>
        <Slider x:Name="SliderMax" HorizontalAlignment="Left" Margin="24,62,0,0" VerticalAlignment="Top" Width="502" Maximum="1000" Minimum="0"/>
        <CheckBox x:Name="CheckR" Content="R" HorizontalAlignment="Left" Margin="24,112,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="CheckG" Content="G" HorizontalAlignment="Left" Margin="24,132,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <CheckBox x:Name="CheckB" Content="B" HorizontalAlignment="Left" Margin="24,152,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <Button x:Name="ButtonOK" Content="OK" HorizontalAlignment="Left" Margin="132,212,0,0" VerticalAlignment="Top" Width="75" Click="ButtonOK_Click"/>
    </Grid>
</Window>
